<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm"
                  type="com.example.android.activitiesproject.ui.eventdetails.EventDetailsViewModel"/>
    </data>
<ScrollView

        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fillViewport="true"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.eventdetails.EventDetailsFragment">

        <!-- TODO: Update blank fragment layout -->


        <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@id/top_guideline3"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                android:fontFamily="@font/helveticaneue"
                android:layout_marginTop="@dimen/_10sdp"
        />
        <TextView
                android:id="@+id/event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="this is title"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintTop_toBottomOf="@id/title_txt"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/helveticaneue"

        />
        <TextView
                android:id="@+id/txt_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/event_title"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:layout_marginTop="@dimen/_20sdp"
android:fontFamily="@font/helveticaneue"
        />
        <TextView
                android:id="@+id/event_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="this is the description of the event"
                android:textColor="#000"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintTop_toBottomOf="@id/txt_desc"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/helveticaneue"
        />
        <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/event_description"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/helveticaneue"

        />
        <TextView
                android:id="@+id/event_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="19/8/2019"
                android:textSize="@dimen/_11ssp"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/txt_date"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/helveticaneue"
        />
        <TextView
                android:id="@+id/txt_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starts at"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/event_date"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/helveticaneue"
        />
        <TextView
                android:id="@+id/event_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 AM"
                android:textSize="@dimen/_11ssp"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@id/txt_start"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/helveticaneue"

        />
        <TextView
                android:id="@+id/txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ends at"
                android:textSize="@dimen/_17ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@id/txt_start"
                app:layout_constraintStart_toEndOf="@id/txt_start"
                app:layout_constraintEnd_toEndOf="@id/end_guideline2"
                android:fontFamily="@font/helveticaneue"
        />
        <TextView
                android:id="@+id/event_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 AM"
                android:textSize="@dimen/_11ssp"
                android:textColor="#000"
                app:layout_constraintTop_toTopOf="@id/event_start_time"
                app:layout_constraintStart_toStartOf="@id/txt_end"
                android:fontFamily="@font/helveticaneue"
                android:layout_margin="@dimen/_10sdp"
        />

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/start_guideline" app:layout_constraintGuide_begin="@dimen/_20sdp"
                android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/end_guideline2" app:layout_constraintGuide_end="@dimen/_20sdp"
                android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/top_guideline3" app:layout_constraintGuide_begin="@dimen/_20sdp"
                android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/bottom_guideline4" app:layout_constraintGuide_end="@dimen/_20sdp"
                android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>